@page "/customer-service"

<section class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="rounded-2xl bg-white/80 shadow p-6">
    <header class="text-center mb-6">
      <h1 class="text-2xl font-extrabold">Customer Service</h1>
    </header>
    <div class="space-y-8">
      <section>
        <h2 class="text-xl font-bold">We're Here to Help</h2>
        <p class="mt-1 text-sm text-neutral-700">At our shop, customer satisfaction is our top priority. Contact us for any assistance.</p>
      </section>

      <section>
        <h3 class="text-lg font-semibold">Contact Us</h3>
        <ul class="mt-2 list-disc list-inside text-sm">
          <li><strong>Email:</strong> support@az-solve.com</li>
          <li><strong>Phone:</strong> +1 123-456-7890</li>
          <li><strong>Address:</strong> 123 Main Street, Your City, Your Country</li>
        </ul>
      </section>

      <section>
        <h3 class="text-lg font-semibold">Frequently Asked Questions</h3>
        <p class="mt-1 text-sm text-neutral-700">Find answers to common questions about orders, returns, and shipping.</p>
        <a class="inline-flex items-center rounded bg-neutral-900 text-white px-4 py-2 font-semibold hover:bg-neutral-800 mt-2" href="faq">Visit FAQ</a>
      </section>

      <section>
        <h3 class="text-lg font-semibold">Submit a Ticket</h3>
        <EditForm Model="Model" OnValidSubmit="SubmitTicket" class="mt-3 space-y-3">
          <DataAnnotationsValidator />
          
          <div>
            <input type="text" @bind="Model.CustomerName" class="w-full border rounded px-3 py-2" placeholder="Your Name" disabled="@IsSubmitting" />
            <ValidationMessage For="@(() => Model.CustomerName)" class="text-red-600 text-sm mt-1" />
          </div>
          
          <div>
            <input type="email" @bind="Model.CustomerEmail" class="w-full border rounded px-3 py-2" placeholder="Your Email" disabled="@IsSubmitting" />
            <ValidationMessage For="@(() => Model.CustomerEmail)" class="text-red-600 text-sm mt-1" />
          </div>
          
          <div>
            <textarea @bind="Model.Message" class="w-full border rounded px-3 py-2" rows="4" placeholder="Your Message" disabled="@IsSubmitting"></textarea>
            <ValidationMessage For="@(() => Model.Message)" class="text-red-600 text-sm mt-1" />
          </div>
          
          <button type="submit" class="inline-flex items-center rounded bg-emerald-600 text-white px-4 py-2 font-semibold hover:bg-emerald-700 disabled:opacity-50 disabled:cursor-not-allowed" disabled="@IsSubmitting">
            @if (IsSubmitting)
            {
              <span>Submitting...</span>
            }
            else
            {
              <span>Submit</span>
            }
          </button>
        </EditForm>
      </section>
    </div>
  </div>
</section>
